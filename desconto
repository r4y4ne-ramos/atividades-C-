#include <iostream>

using namespace std;
int main()
{
    float valorCompra;
    bool ganhouDesconto;
    
    cout << "Digite o valor da compra: R$";
    cin >> valorCompra;
    
    ganhouDesconto = valorCompra > 100.0;
    
    
    cout << "Ganhou desconto; "  << (ganhouDesconto ? "Verdadeiro" : "falso") << endl;

    return 0;
}